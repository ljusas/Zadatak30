<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ljusas.com.termin32.activities.DetailActivity"
    tools:showIn="@layout/activity_detail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/tv_sername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sername"
            android:layout_weight="1"
            android:textSize="18dp"
            android:layout_below="@+id/tv_name"/>

        <TextView
            android:id="@+id/tv_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CV"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_sername"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/tv_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Year of birth"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_cv"
            android:textSize="18dp"/>


        <RatingBar
            android:id="@+id/actor_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:numStars="5"
            android:layout_weight="1"
            android:layout_below="@id/tv_year"/>

        <ListView
            android:id="@+id/movie_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_below="@id/actor_rating">
        </ListView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
